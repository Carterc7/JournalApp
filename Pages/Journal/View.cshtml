@page "{id:int}"
@model ViewModel
@{
    ViewData["Title"] = Model.JournalPost?.Title ?? "Journal Entry";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.JournalPost != null)
            {
                <div class="card shadow">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1 class="h2 mb-0">@Model.JournalPost.Title</h1>
                            <div class="btn-group" role="group">
                                <a href="/Journal/Edit/@Model.JournalPost.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                <a href="/Journal/Delete/@Model.JournalPost.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">
                                Created: @Model.JournalPost.DateCreated.ToString("MM/dd/yyyy")
                            </small>
                        </div>
                        
                        <div class="journal-content">
                            @Model.JournalPost.Content
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/Journal" class="btn btn-primary">← Back to Journal</a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4>Journal Entry Not Found</h4>
                    <p>The journal entry you're looking for doesn't exist or has been deleted.</p>
                    <a href="/Journal" class="btn btn-primary">← Back to Journal</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .journal-content {
        line-height: 1.8;
        font-size: 1.1rem;
        white-space: pre-wrap;
    }
</style> 