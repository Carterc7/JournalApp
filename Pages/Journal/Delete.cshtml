@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Journal Entry";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.JournalPost != null)
            {
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white">
                        <h2 class="mb-0">Delete Journal Entry</h2>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <h4>Are you sure you want to delete this journal entry?</h4>
                            <p>This action cannot be undone.</p>
                        </div>
                        
                        <div class="mb-3">
                            <strong>Title:</strong> @Model.JournalPost.Title
                        </div>
                        
                        <div class="mb-3">
                            <strong>Created:</strong> @Model.JournalPost.DateCreated.ToString("MMMM dd, yyyy 'at' h:mm tt")
                        </div>
                        
                        <div class="mb-3">
                            <strong>Content Preview:</strong>
                            <div class="border p-3 bg-light rounded">
                                @(Model.JournalPost.Content.Length > 200 ? Model.JournalPost.Content.Substring(0, 200) + "..." : Model.JournalPost.Content)
                            </div>
                        </div>
                        
                        <form method="post">
                            <div class="d-flex justify-content-between">
                                <a href="/Journal/View/@Model.JournalPost.Id" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete Entry</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4>Journal Entry Not Found</h4>
                    <p>The journal entry you're trying to delete doesn't exist or has already been deleted.</p>
                    <a href="/Journal" class="btn btn-primary">‚Üê Back to Journal</a>
                </div>
            }
        </div>
    </div>
</div> 